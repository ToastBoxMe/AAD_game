<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text=""
        android:id="@+id/login_seperator"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/user_id"
        android:text="USER LOGIN"
        android:layout_marginBottom="30dp"
        android:textSize="50sp"
        android:fontFamily="@font/allerta_stencil"
        android:id="@+id/login_title"
        android:textFontWeight="700"
        android:textColor="@color/black"
        />

    <EditText
        android:id="@+id/user_id"
        android:layout_width="@dimen/edit_text_login"
        android:layout_height="wrap_content"
        android:layout_above="@+id/login_seperator"
        android:layout_centerHorizontal="true"
        android:background="@drawable/login_edit_text_backround"
        android:hint="@string/user_username"
        android:textAlignment="center"
        android:textColorHint="@color/black"
        android:textSize="24sp"
        android:fontFamily="@font/armata"
        android:textColor="@color/black"
        android:textFontWeight="700"
        />
    <EditText
        android:id="@+id/user_pass"
        android:layout_centerHorizontal="true"
        android:layout_width="@dimen/edit_text_login"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_seperator"
        android:hint="@string/user_password"
        android:textSize="24sp"
        android:textAlignment="center"
        android:textColorHint="@color/black"
        android:background="@drawable/login_edit_text_backround"
        android:fontFamily="@font/armata"
        android:textColor="@color/black"
        android:textFontWeight="700"
        />
    <Button
        android:layout_width="@dimen/edit_text_login"
        android:layout_height="30dp"
        android:layout_below="@+id/user_pass"
        android:layout_centerHorizontal="true"
        android:background="@drawable/login_button_background"
        android:layout_marginTop="15dp"
        android:text="LOGIN"
        android:textSize="24sp"
        android:fontFamily="@font/armata"
        android:textFontWeight="700"
        android:id="@+id/login_button"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background=""
        android:textColor="@color/colorPrimaryDark"
        android:text="Don't have an account?"
        android:layout_below="@+id/login_button"
        android:layout_marginTop="20dp"
        android:id="@+id/no_account_text"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/no_account_text"
        android:layout_centerHorizontal="true"
        android:text="SignUp"
        android:textColor="@color/orange"
        android:textAllCaps="false"
        android:background=""
        android:textFontWeight="700"
        android:id="@+id/sign_up_button"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        />
</RelativeLayout>