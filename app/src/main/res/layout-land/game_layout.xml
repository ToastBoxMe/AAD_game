<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1A1A1A">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mute_board">


        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/question_mark"
            android:layout_alignParentBottom="true"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/score_board"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@mipmap/face_normal_p"
            android:layout_marginLeft="60sp"
            android:id="@+id/face_p1"
            />
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@mipmap/face_xp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="60dp"
            android:id="@+id/face_p2"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/p_s_1"
            android:textSize="40sp"
            android:textColor="@color/white"
            android:layout_below="@+id/face_p1"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="74dp"
            android:freezesText="true"
            android:id="@+id/player1_score"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/p_s_2"
            android:textSize="40sp"
            android:textColor="@color/white"
            android:layout_below="@+id/face_p1"
            android:layout_alignParentRight="true"
            android:layout_marginRight="77dp"
            android:layout_marginTop="12dp"
            android:freezesText="true"
            android:id="@+id/player2_score"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:id="@+id/score_seperator"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/game_board">
        <Button
            android:id="@+id/b_00"
            android:layout_width="@dimen/game_button"
            android:layout_height="@dimen/game_button"
            android:layout_above="@id/b_11"
            android:layout_toLeftOf="@+id/b_01"
            android:layout_margin="@dimen/game_board"
            android:background="@drawable/custom_game_button"
            android:theme="@style/textSizeXO"
            android:freezesText="true"
            />
        <Button
            android:id="@+id/b_01"
            android:layout_width="@dimen/game_button"
            android:layout_height="@dimen/game_button"
            android:layout_above="@+id/b_11"
            android:layout_centerHorizontal="true"
            android:layout_margin="@dimen/game_board"
            android:background="@drawable/custom_game_button"
            android:theme="@style/textSizeXO"
            android:freezesText="true"
            />
        <Button
            android:id="@+id/b_02"
            android:layout_width="@dimen/game_button"
            android:layout_height="@dimen/game_button"
            android:layout_above="@id/b_11"
            android:layout_toRightOf="@id/b_01"
            android:layout_margin="@dimen/game_board"
            android:background="@drawable/custom_game_button"
            android:theme="@style/textSizeXO"
            android:freezesText="true"
            />
        <Button
            android:id="@+id/b_10"
            android:layout_width="@dimen/game_button"
            android:layout_height="@dimen/game_button"
            android:layout_margin="@dimen/game_board"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/b_11"
            android:background="@drawable/custom_game_button"
            android:theme="@style/textSizeXO"
            android:freezesText="true"
            />
        <Button
            android:id="@+id/b_11"
            android:layout_width="@dimen/game_button"
            android:layout_height="@dimen/game_button"
            android:layout_centerInParent="true"
            android:layout_margin="@dimen/game_board"
            android:background="@drawable/custom_game_button"
            android:theme="@style/textSizeXO"
            android:freezesText="true"
            />
        <Button
            android:id="@+id/b_12"
            android:layout_width="@dimen/game_button"
            android:layout_height="@dimen/game_button"
            android:layout_margin="@dimen/game_board"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/b_11"
            android:background="@drawable/custom_game_button"
            android:theme="@style/textSizeXO"
            android:freezesText="true"
            />
        <Button
            android:id="@+id/b_20"
            android:layout_width="@dimen/game_button"
            android:layout_height="@dimen/game_button"
            android:layout_margin="@dimen/game_board"
            android:layout_below="@+id/b_11"
            android:layout_toLeftOf="@id/b_21"
            android:background="@drawable/custom_game_button"
            android:theme="@style/textSizeXO"
            android:freezesText="true"
            />
        <Button
            android:id="@+id/b_21"
            android:layout_width="@dimen/game_button"
            android:layout_height="@dimen/game_button"
            android:layout_margin="@dimen/game_board"
            android:layout_below="@+id/b_11"
            android:layout_centerHorizontal="true"
            android:background="@drawable/custom_game_button"
            android:theme="@style/textSizeXO"
            android:freezesText="true"
            />
        <Button
            android:id="@+id/b_22"
            android:layout_width="@dimen/game_button"
            android:layout_height="@dimen/game_button"
            android:layout_margin="@dimen/game_board"
            android:layout_below="@+id/b_11"
            android:layout_toRightOf="@id/b_21"
            android:background="@drawable/custom_game_button"
            android:theme="@style/textSizeXO"
            android:freezesText="true"
            />


    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/reset_board">
        <Button
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:id="@+id/resetButton"
            android:text="@string/restart"
            android:textSize="24sp"
            android:background="@drawable/custom_play_button"
            />

    </RelativeLayout>

</RelativeLayout>